{
  "documentation_url": "https://dev.mysql.com/doc/",
  "stream_type": "dynamic",
  "connection_specification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "MySQL",
    "type": "object",
    "required": ["host", "port", "database"],
    "properties": {
      "credentials": {
        "title": "",
        "type": "object",
        "required": ["auth_type", "username", "password"],
        "properties": {
          "auth_type": {
            "type": "string",
            "default": "username/password",
            "order": 0,
            "readOnly": true
          },
          "username": {
            "description": "Your MySQL user credentials.",
            "type": "string",
            "title": "Username"
          },
          "password": {
            "description": "Password for the specified user.",
            "type": "string",
            "title": "Password",
            "multiwoven_secret": true
          }
        }
      },
      "host": {
        "description": "Hostname or IP of your MySQL server.",
        "type": "string",
        "title": "Host"
      },
      "port": {
        "description": "MySQL server port, defaults to 3306.",
        "type": "string",
        "title": "Port",
        "default": "3306"
      },
      "database": {
        "description": "The specific MySQL database to connect to.",
        "type": "string",
        "title": "Database"
      }
    }
  }
}
